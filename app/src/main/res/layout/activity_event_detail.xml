<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smokeWhite">

    <TextView
        android:id="@+id/txt_isPublic_detail"
        android:layout_width="47dp"
        android:layout_height="23dp"
        android:text="@string/string_public"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="156dp" />

    <TextView
        android:id="@+id/txt_categories_detail"
        android:layout_width="201dp"
        android:layout_height="21dp"
        android:text="@string/string_art"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="156dp" />

    <TextView
        android:id="@+id/id_event_name_detail"
        android:layout_width="298dp"
        android:layout_height="23dp"
        android:text="@string/string_random_event"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/id_timestamp_detail"
        android:layout_width="326dp"
        android:layout_height="21dp"
        android:text="@string/string_07_26_2022"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="200dp" />

    <TextView
        android:id="@+id/txt_desc_detail"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/string_descrition"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="340dp" />

    <TextView
        android:id="@+id/id_location_detail"
        android:layout_width="329dp"
        android:layout_height="21dp"
        android:text="@string/string_adresssss"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="230dp" />

    <TextView
        android:id="@+id/txt_host_detail"
        android:layout_width="103dp"
        android:layout_height="24dp"
        android:text="@string/string_host_random_usr"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="301dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="301dp" />

    <TextView
        android:id="@+id/txt_hoster_detail"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="Host:"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="267dp" />

    <TextView
        android:id="@+id/id_goers_detail"
        android:layout_width="247dp"
        android:layout_height="25dp"
        android:scrollbars="horizontal"
        android:text="@string/string_userlist"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="300dp" />

    <TextView
        android:id="@+id/txt_goers_detail"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/string_go_ers"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="267dp" />

    <TextView
        android:id="@+id/id_desc_detail"
        android:layout_width="367dp"
        android:layout_height="183dp"
        android:background="@drawable/border"
        android:scrollbars="horizontal"
        android:text="\n\n\n\nWaiting for Owner to add more description"
        android:textAlignment="center"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="381dp" />

    <Button
        android:id="@+id/btn_cancel_detail"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightRed"
        android:onClick="returnBack"
        android:text="@string/string_cancel"
        tools:ignore="TextContrastCheck"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="619dp" />

    <Button
        android:id="@+id/btn_join_detail"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightRed"
        android:text="@string/string_join"
        tools:ignore="TextContrastCheck"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="624dp" />

    <ImageView
        android:id="@+id/img_categories"
        android:layout_width="299dp"
        android:layout_height="99dp"
        app:srcCompat="@drawable/sticker_community"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="50dp" />

    <ImageButton
        android:id="@+id/btn_save_detail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@drawable/ic_save_star"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="149dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
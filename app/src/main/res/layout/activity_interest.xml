<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smokeWhite">

    <CheckBox
        android:id="@+id/cbox_culture_interest"
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="384dp"
        android:button="@android:color/transparent"
        android:text="Culture"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toEndOf="@+id/cbox_art_interest"
        app:layout_constraintTop_toBottomOf="@+id/cbox_outdoor_interest"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/cbox_business_interest"
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="384dp"
        android:button="@android:color/transparent"
        android:text="Business"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cbox_culture_interest" />

    <CheckBox
        android:id="@+id/cbox_art_interest"
        android:layout_width="64dp"
        android:layout_height="38dp"
        android:button="@android:color/transparent"
        android:text="Art"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbox_tech_interest"
        app:layout_constraintVertical_bias="0.051" />

    <CheckBox
        android:id="@+id/cbox_career_interest"
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="384dp"
        android:button="@android:color/transparent"
        android:text="Career"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.342"
        app:layout_constraintStart_toEndOf="@+id/cbox_business_interest" />

    <CheckBox
        android:id="@+id/cbox_game_interest"
        android:layout_width="87dp"
        android:layout_height="39dp"
        android:layout_marginBottom="428dp"
        android:button="@android:color/transparent"
        android:text="Games"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbox_edu_interest" />

    <CheckBox
        android:id="@+id/cbox_outdoor_interest"
        android:layout_width="87dp"
        android:layout_height="39dp"
        android:layout_marginBottom="428dp"
        android:button="@android:color/transparent"
        android:text="Outdoor"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbox_edu_interest"
        app:layout_constraintVertical_bias="0.529" />

    <CheckBox
        android:id="@+id/cbox_tech_interest"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginBottom="428dp"
        android:button="@android:color/transparent"
        android:text="Technology"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbox_edu_interest" />

    <CheckBox
        android:id="@+id/cbox_travel_interest"
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="468dp"
        android:button="@android:color/transparent"
        android:text="Travel"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toEndOf="@+id/cbox_edu_interest"
        app:layout_constraintTop_toTopOf="@+id/txt_main_interest"
        app:layout_constraintVertical_bias="0.772" />

    <TextView
        android:id="@+id/txt_main_interest"
        android:layout_width="282dp"
        android:layout_height="58dp"
        android:text="@string/we_really_want_to_know_which_events_you_want_to_go"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <CheckBox
        android:id="@+id/cbox_edu_interest"
        android:layout_width="64dp"
        android:layout_height="38dp"
        android:button="@android:color/transparent"
        android:text="Sports"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_main_interest"
        app:layout_constraintVertical_bias="0.173" />

    <CheckBox
        android:id="@+id/cbox_edu_interest2"
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="468dp"
        android:button="@android:color/transparent"
        android:text="Education"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cbox_edu_interest"
        app:layout_constraintTop_toTopOf="@+id/txt_main_interest"
        app:layout_constraintVertical_bias="0.772" />

    <CheckBox
        android:id="@+id/cbox_fitness_interest"
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="468dp"
        android:button="@android:color/transparent"
        android:text="Fitness"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toEndOf="@+id/cbox_edu_interest"
        app:layout_constraintTop_toTopOf="@+id/txt_main_interest"
        app:layout_constraintVertical_bias="0.772" />
</androidx.constraintlayout.widget.ConstraintLayout>
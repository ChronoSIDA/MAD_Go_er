<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_send">

    <fragment
        android:id="@+id/navigation_send"
        android:name="edu.neu.madcourse.team36_a8.ui.send.SendFragment"
        android:label="@string/txt_stick_em"
        tools:layout="@layout/fragment_send" >
        <action
            android:id="@+id/action_navigation_send_to_navigation_receive"
            app:destination="@id/navigation_receive" />
    </fragment>

    <fragment
        android:id="@+id/navigation_receive"
        android:name="edu.neu.madcourse.team36_a8.ui.receive.ReceiveFragment"
        android:label="@string/txt_receive"
        tools:layout="@layout/fragment_receive" >
        <action
            android:id="@+id/action_navigation_receive_to_navigation_history"
            app:destination="@id/navigation_history" />
    </fragment>
    <fragment
        android:id="@+id/navigation_history"
        android:name="edu.neu.madcourse.team36_a8.ui.history.HistoryFragment"
        android:label="@string/txt_history"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_navigation_history_to_navigation_logout"
            app:destination="@id/navigation_logout" />
    </fragment>

    <fragment
        android:id="@+id/navigation_logout"
        android:name="edu.neu.madcourse.team36_a8.ui.logout.LogoutFragment"
        android:label="@string/txt_logout"
        tools:layout="@layout/fragment_logout" />
</navigation>